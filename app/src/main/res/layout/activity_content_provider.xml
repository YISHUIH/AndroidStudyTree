<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.android.zj.ContentProviderActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/add_man"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="添加man" />

        <Button
            android:id="@+id/query_man"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="查询man" />

        <Button
            android:id="@+id/delete_man"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="清空Man数据" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/add_dog"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="添加dog" />

        <Button
            android:id="@+id/query_dog"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="查询dog" />

        <Button
            android:id="@+id/delete_dog"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="清空dog数据" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp" />
</LinearLayout>